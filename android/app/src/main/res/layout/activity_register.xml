<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#08588C"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".RegisterActivity">

    <TextView
        android:id="@+id/text_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:text="Register"
        android:textAlignment="center"
        android:textColor="#FEFEFE"
        android:textSize="30sp" />


    <EditText
        android:id="@+id/register_etEmail"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/background_form"
        android:ems="10"
        android:fontFamily="@font/roboto_light"
        android:hint="E - Mail"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/register_etNama"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/background_form"
        android:ems="10"
        android:fontFamily="@font/roboto_light"
        android:hint="Nama Lengkap"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textSize="20sp" />


    <EditText
        android:id="@+id/register_etPassword"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/background_form"
        android:ems="10"
        android:fontFamily="@font/roboto_light"
        android:hint="Password"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/register_etPasswordConfirmation"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/background_form"
        android:ems="10"
        android:fontFamily="@font/roboto_light"
        android:hint="Konfirmasi Password"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textSize="20sp" />


    <EditText
        android:id="@+id/register_etTelp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/background_form"
        android:ems="10"
        android:fontFamily="@font/roboto_light"
        android:hint="No Telp"
        android:inputType="phone"
        android:textAlignment="center"
        android:textSize="20sp" />

    <Button
        android:id="@+id/register_btnRegisterPemilik"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/bg_btn_yellow"
        android:fontFamily="@font/roboto_bold"
        android:text="Daftar Pemilik"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <Button
        android:id="@+id/register_btnRegisterPenyewa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/bg_btn_green"
        android:fontFamily="@font/roboto_bold"
        android:text="Daftar Penyewa"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textLoginHere"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_light"
        android:text="Already Registered ? Login Here"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="16dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="invisible" />


</LinearLayout>
